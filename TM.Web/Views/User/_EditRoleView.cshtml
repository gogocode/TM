@using TM.Domain.ViewModels
@model UserEditRoleView

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title" id="myModalLabel">修改角色</h4>
</div>
<div class="modal-body">
    @using (Html.BeginForm("EditRolePost", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.HiddenFor(x => x.UserId)
        <table class="table">
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>
                        <div class="checkbox" style="display: inline">
                            <label>
                                <input type="checkbox" name="SelectedRoleIds" value="@role.RoleId" @(Model.SelectedRoleIds.Contains(role.RoleId) ? "checked" : "") /> @role.RoleEngName @role.RoleName
                            </label>
                        </div>
                    </td>
                </tr>
            }
        </table>

        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">離開</button>
            <button type="submit" class="btn btn-primary">儲存</button>
        </div>
    }
</div>



