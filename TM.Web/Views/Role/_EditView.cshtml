@using TM.Domain.Models
@model Role

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title" id="myModalLabel">修改角色</h4>
</div>
@using (Html.BeginForm("EditPost", "Role", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="modal-body">
        <div class="form-group">
            @Html.LabelFor(model => model.RoleId, htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-6">
                @Html.EditorFor(model => model.RoleId, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.RoleEngName, htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-6">
                @Html.EditorFor(model => model.RoleEngName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoleEngName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-6">
                @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">離開</button>
        <button type="submit" class="btn btn-primary">儲存</button>
    </div>
}





