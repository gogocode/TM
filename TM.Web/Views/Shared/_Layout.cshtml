<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>工作管理系統</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    

    @*SB ADMIN2*@
    <!-- MetisMenu CSS -->
    <link href="~/ThirdParties/sb-admin-2/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/ThirdParties/sb-admin-2/dist/css/sb-admin-2.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="~/ThirdParties/sb-admin-2/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    @*JqueryConfirm*@
    <link href="~/ThirdParties/jquery-confirm-master/dist/jquery-confirm.min.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <div id="wrapper">
        @Html.Action("Menu", "Home")

        <div id="page-wrapper">
            <div id="msgZone">
                @{
                    string message = TempData["Message"] != null ? TempData["Message"].ToString() : string.Empty;
                    string[] msg = message.Split(',');
                }


                @if (!string.IsNullOrWhiteSpace(message))
                {
                    <br>
                    <div class="alert alert-@msg[0] alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>
                            @Html.Raw(@msg[1])
                        </strong>
                    </div>
                }
                
            </div>

            @RenderBody()
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @*SB ADMIN2*@
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/ThirdParties/sb-admin-2/vendor/metisMenu/metisMenu.min.js"></script>
    <!-- Morris Charts JavaScript -->
    <script src="~/ThirdParties/sb-admin-2/vendor/raphael/raphael.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/ThirdParties/sb-admin-2/dist/js/sb-admin-2.js"></script>

    @*JqueryConfirm*@
    <script src="~/ThirdParties/jquery-confirm-master/dist/jquery-confirm.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>