@using TM.Domain.Models
@model Diary

<script>
    $(document).ready(function () {
        //項目
        $(".ItemBtn").click(function () {
            var itemName = $(this).data("id");

            $(this).parent().parent().parent().parent().children().filter('input').val(itemName);
        });
    });
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title" id="myModalLabel">修改工作日誌</h4>
</div>
@using (Html.BeginForm("EditPost", "Diary", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <div class="modal-body">
        <div class="form-group">
            @Html.LabelFor(model => model.DiaryId, htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-6">
                @Html.EditorFor(model => model.DiaryId, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.DiaryId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.WorkDate, htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-6">
                @*@Html.EditorFor(model => model.WorkDate.ToShortDateString(), new { htmlAttributes = new { @class = "form-control datepicker-here" } })*@
                <input id="WorkDate" name="WorkDate" type='text' class='form-control datepicker-here' value="@Model.WorkDate.ToShortDateString()" />
                @Html.ValidationMessageFor(model => model.WorkDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Item, htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-6">
                @Html.DropDownItem(model => model.Item)
                @*@Html.EditorFor(model => model.Item, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.Item, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-6">
                @Html.TextAreaFor(model=>model.Content,  new { @class = "form-control", rows = "5" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Hours, htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-sm-6">
                @Html.EditorFor(model => model.Hours, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hours, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">離開</button>
        <button type="submit" class="btn btn-primary">儲存</button>
    </div>
}


